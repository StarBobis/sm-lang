{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ASM",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.asm",
          "match": "\\b(if|else|while|for|return|ret)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.directive.asm",
          "match": "\\b(dcl_input|dcl_output|dcl_temps|imul|dcl_resource_buffer|ld|mul|mad|mov|imad|dp2|dp3|dp4)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.asm",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.asm",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.asm"
}